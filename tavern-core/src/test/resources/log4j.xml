<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE log4j:configuration PUBLIC "-//log4j/log4j Configuration//EN" "log4j.dtd">
<log4j:configuration xmlns:log4j="http://jakarta.apache.org/log4j/"
	threshold="null" debug="null">

	<appender name="avatarAppender" class="org.apache.log4j.DailyRollingFileAppender">
		<param name="File" value="/data/applogs/tesecai-shoplist-web/logs/avatar.log" />
		<layout class="org.apache.log4j.PatternLayout">
			<param name="ConversionPattern" value="[tesecai-shoplist-web]%d %-5p [%c] %m%n" />
		</layout>
	</appender>


	<root>
		<level value="INFO" />
		<appender-ref ref="avatarAppender" />
	</root>

</log4j:configuration>
